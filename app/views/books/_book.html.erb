<%= form_with model:book do |f| %>
  <div class="form-group">
    <%= f.label :title %></br>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %></br>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Creeate Book">
  </div>
<% end %>