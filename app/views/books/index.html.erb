      <div class="form-group">
        <lebel for="book_title">Title</lebel>
        <%= f.text_field :book_title %>
      </div>
      <div class="form-group">
        <lebel for="book_opinion">Opinion</lebel>
        <%= f.text_area :book_body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
