<div class="container">
  <div class="row">
    <%= render 'books/error', book: @book %>
    <div class="col-xs-3">
      <%= render 'users/user', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <%= link_to @book.user.name, user_path(@book.user) %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
