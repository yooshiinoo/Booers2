<p id="notice"></p>
<% if @book.errors.any? %>
  <div class="errors">
    <p>
      <%= @book.errors.count %>error prohibited this obj form being saved
    </p>
    <ul><% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book do |f| %>
        <div class="form-group">
          <%= f.label :title %></br>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %></br>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>

