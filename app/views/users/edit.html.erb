 <div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
        <div class="error">
          <h3>
            <%= @user.errors.count %>error prohibited this obj form being saved
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      <div class="form-group">
        <lebel for="user_name">Name</lebel>
        <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"user[name]"%>
      </div>
      <div class="form-group">
        <lebel for="user_image">Image</lebel>
        <%= f.file_field :profile_image, placeholder: "image", accept: "image/*" %> 
      </div>
      <div class="form-group">
        <lebel for="user_introduction">Introduction</lebel>
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User' %>
      </div>
      <% end %>
    </div>
  </div>
</div>


